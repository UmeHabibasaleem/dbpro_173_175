@model IEnumerable<E_Medicine_Store.Models.MedicineViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <h3 style="text-align:left">@Html.ActionLink("Create New", "Create")</h3>
                <h2 style="text-align:center">Index</h2>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MedId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MedicineName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Company)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Measurement)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StockID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryID)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedicineName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Measurement)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryID)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.MedId}) |
                                    @Html.ActionLink("Details", "Details", new { id = item.MedId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MedId })
                                </td>
                            </tr>
                        }
                    }



                </tbody>
            </table>

        </div>
    </div>
</body>
